{
  "name": "fira",
  "version": "1.0.0",
  "private": true,
  "description": "A poll maker",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm run db:start && pnpm run db:push && next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:nowatch": "vitest run",
    "lint": "biome lint src/",
    "lint:fix": "biome check --apply src/",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:push": "npx prisma db push && npx prisma generate",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@hookform/resolvers": "3.1.0",
