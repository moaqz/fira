    "@tanstack/react-query": "4.29.5",
    "dayjs": "1.11.10",
    "next": "13.4.1",
    "next-auth": "4.22.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.43.9",
    "sonner": "0.3.5",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@testing-library/jest-dom": "6.1.6",
